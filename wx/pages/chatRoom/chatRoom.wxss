page {
    width: 100%;
    height: 100%;
}

.chat-room {
    position: relative;
    width: 100%;
    height: 100%;
}

.header{
    height: 180rpx;
    line-height: 180rpx;
    text-align: center;
    font-size: 48rpx;
    color: #D02129;
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background: #fff;
}

.quit-btn{
    position: absolute;
    right: 20rpx;
    color: #999;
}

.online-avatar-container {
    height: 140rpx;
    line-height: 140rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    box-shadow: 10rpx 30rpx 50rpx #fff;
    z-index: 40;
    padding: 0 20rpx;
    position: fixed;
    right: 0;
    width: 100%;
    background: #fff;
}

.online-avatar-item {
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    text-align: center;
    line-height: 80rpx;
    background: rgba(51, 51, 51, 0.3);
    color: #fff;
    font-size: 28rpx;
}

.online-count {
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 80rpx;
    text-align: center;
    background: rgba(51, 51, 51, 0.3);
    color: #fff;
    font-size: 28rpx;
}

.online-avatar-item image {
    width: 80rpx;
    height: 80rpx;
}

.chat-room-container {
    width:100%;
    height: 100%;
	box-sizing: border-box;
}

.scroll-view {
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    padding: 120rpx 40rpx 132rpx 40rpx;
}

.message-box {
    margin-top: 16rpx;
    display: flex;
}

.message-item {
    box-sizing: border-box;
    height: 72rpx;
    background-color: rgba(196, 196, 196, 0.2);
    font-size: 28rpx;
    border-radius: 10rpx;
    padding: 18rpx 30rpx;
    font-family: Microsoft YaHei UI;
}

.user-name {
    color: #D02129;
    font-family: Microsoft YaHei UI;
}

.user-message {
    color: #333;
    font-family: Microsoft YaHei UI;
}

.chat-room-action {
	display: flex;
	align-items: center;
    height: 132rpx;
    line-height: 132rpx;
    padding:20rpx 28rpx;
	box-sizing: border-box;
    background: #ffffff;
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
}
.message-input-box{
    flex-grow: 1;
    display: flex;
    position: relative;
    height: 92rpx;
}

.message-input {
    background-color: rgba(51, 51, 51, 0.1);
    border-radius: 100rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    padding: 26rpx 40rpx;
    flex: 1;
    border: 0;
    outline: none;
}

.message-btn {
    position: absolute;
    width: 72rpx;
    height: 72rpx;
    background: #D02129;
    right: 10rpx;
    top: 10rpx;
    z-index: 1000;
    border-radius: 72rpx;
    text-align: center;
    line-height: 72rpx;
    color: #fff;
    font-weight: bold;
    font-size: 32rpx;
}

.heart {
    width: 80rpx;
    height: 92rpx;
}

.rocket {
    width: 40rpx;
    height: 92rpx;
}

.self {
    color: #D02129;
}

.show-animation {
    width: 80rpx;
    height: 320rpx;
    position: fixed;
    z-index: 44;
    left: 50%;
    bottom: 80rpx;
    margin: 0 -40rpx;
    justify-content: flex-end;
    animation: myanimation 2s linear;
    display: flex;
    flex-direction: column;
}

.prop-heart {
    height: 80rpx;
    width: 80rpx;
}

.prop-rocket {
    height: 160rpx;
    width: 80rpx;
}

@keyframes myanimation {
    from {
        bottom: 80rpx;
    }
    to {
        bottom: 600rpx;
    }
}

/* 消除scroll-view 的纵向滚动条 */
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
display:none;
}